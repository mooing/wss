<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Role">
	<!-- 操作角色基本信息 -->

	<!-- 查询所有角色 -->
	<select id="findAllRole" resultType="Role">
		select
		id,
		rolename
		from
		sys_role
	</select>

	<!-- 分页查询 -->
	<select id="findAllRoleCount" parameterType="role" resultType="int">
		select
		count(*)
		from
		sys_role
	</select>
	<select id="findAllRolePage" parameterType="map" resultType="Role">
		select
		id,
		rolename
		from
		sys_role
		limit
		#{startrecord} , #{recordsize}
	</select>
	<select id="findRoleById" parameterType="int" resultType="Role">
		select
		id,
		rolename
		from
		sys_role
		where id=#{id}
	</select>
	<!-- 按角色名称查询是否角色名已存在 -->
	<select id="findRoleByName" parameterType="string" resultType="int">
		select
		count(*)
		from
		sys_role
		where rolename=#{rolename}
	</select>
	<insert id="saveRole" parameterType="Role">
		insert into sys_role(
		rolename
		)
		values(
		#{rolename}
		)
	</insert>
	<update id="updateRoleById" parameterType="Role">
		update sys_role
		set
		rolename=#{rolename}
		where id=#{id}
	</update>
	<delete id="delRoleById" parameterType="int">
		delete from sys_role
		where id=#{id}
	</delete>


	<!-- 操作用户角色关联表 -->
	<!-- 保存用户角色 -->
	<insert id="saveBatchUserRole" parameterType="UserRole">
		insert into
		sys_user_role(
		userid,
		roleid
		)
		values
		<foreach collection="list" item="userrole" index="index" separator=","></foreach>
		(
		#{userrole.userid},
		#{userrole.roleid}
		)
	</insert>
	<!-- 按用户id查询，用户对应所有角色 -->
	<select id="findRolesByUserId" parameterType="int" resultType="Role">
		select
		id,
		userid,
		roleid
		from
		sys_user_role
		where userid=#{userid}
	</select>
	<select id="findRoleIdByUserId" parameterType="int" resultType="int">
		select
		roleid
		from
		sys_user_role
		where userid=#{userid}
	</select>
	<!-- 删除用户角色 -->
	<delete id="delRoleByUserId" parameterType="int">
		delete from
		sys_user_role where userid=#{userid}
	</delete>
</mapper>